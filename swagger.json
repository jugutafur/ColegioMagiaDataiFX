paths:
  /solicitudes:
    get:
      description: obtener todos los items

          
      - in: query
        name: sueldo
        required: false
        description: Sueldo del empleado 
        schema:
          type: number
          example: 2000
      
      responses:
        200:
          description: Successful request
          content:
            application/json:
              
        404:
          description: Request not found
          content: 
            application/json:
              schema:
                type: string
                example: {"message":"Error.404 page or request not foond."}
    
    post:
      description: crear una solicitud
      parameters:
        - name: estudiante
          in: query
          description: crear nueva solicitud
          schema:
            type: object
            porperties:
              nombre:
                type: string
                description: primer nombre
                example: 'juan guillermo'
              Apellido:
                type: string
                description: primer nombre
                example: 'juan guillermo'
              Identificacion:
                type: number
                description: Id del Alumno
                example: 321
              edad:
                type: number
                description: Edad del Alumno
                example: 321
              casa:
                type: array
                description: casa a la que pertenece
                example: '"Gryffindor"'
                
      responses:
        200:
          description: successfull request
          content:
            application/json:
              schema:
                type: string
                example: "ok"
        
        404:
          description: Request not found
          content: 
            application/json:
              schema:
                type: string
                example: {"message":"Error.404 page or request not foond."}
                
  /solicitud/{id}:
    get:
      description: Obtener una solicitud puntual
      parameters:
        - in: path
          name: id
          required: true
          description: Codigo de la solicitud
          schema:
            type: number
            example: 42
          
      responses:
        200:
          description: Successful request
          content:
            application/json:
              schema:
                type: array
                items:
                  properties:
                    id:
                      type: integer
                      example: 456
                    nombre:
                      type: string
                      example: pepito peres
                    sueldo:
                      type: number
                      format: float
                      example: 2000
  
  /solicitud/{id, "ReplaceItem"}:
    put:
      description: Actualizar Solicitud
      parameters:
        - in: path
          name: id
          required: true
          description: Codigo de la solicitud
          schema:
            type: number
            example: 42
            
        - in: path
          name: id
          required: true
          description: texto a actualizar
          schema:
            type: number
            example: 42
          
      responses:
        200:
          description: Successful request
          content:
            application/json:
            
        404:
          description: Request not found
          content: 
            application/json:
              schema:
                type: string
                example: {"message":"Error.404 page or request not foond."}
                
  /solicitud/{id}:
    delete:
      description: Eliminar una solicitud puntual
      parameters:
        - in: path
          name: id
          required: true
          description: Codigo de la solicitud
          schema:
            type: number
            example: 42
          
      responses:
        200:
          description: Successful request
          content:
            application/json:
              schema:
                type: array
                items:
                  properties:
                    id:
                      type: integer
                      example: 456
                    nombre:
                      type: string
                      example: pepito peres
                    sueldo:
                      type: number
                      format: float
                      example: 2000
              
